<h1 class="h3 mb-3 font-weight-normal">パスワード変更</h1>

<%= form_with(model:@user, url: password_reset_path(params[:id]),  local: true, class:"form-signin") do |f| %>
  <%= render 'shared/error_messages', model: f.object %>
  
  <%= hidden_field_tag :email, @user.email %>

  <%= f.label :新しいパスワード,  class: "sr-only" %>
  <%= f.text_field :password, class: "form-control", placeholder: "新しいパスワード（６字以上)" %>
  
  <%= f.label :新しいパスワード確認用,  class: "sr-only" %>
  <%= f.text_field :password_confirmation, class: "form-control", placeholder: "新しいパスワード確認用" %>
  
  <%= f.submit "パスワードを変更する" %>
<% end %>