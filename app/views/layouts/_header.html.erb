<header>
  <div class="open-side">
    <i class="fas fa-bars" style="font-size:30px; color:#fff;"></i>
  </div>
  <%= render "shared/sidebar" %>
  <div class="logo">
    <%= link_to "Sharing Portfolio", root_path %>
  </div>
  <% if user_signed_in? %>
    <div class="header-icon">
      <div class="header-search">
        タグで探す<i class="fas fa-search"></i>
      </div>
      <div class="">
        <%= link_to rooms_path do %>
          <i class="fas fa-comment" style="color: #fff; font-size: 30px;"></i>
        <% end %>
      </div>
      <div class="">
        <%= link_to notifications_path do %>
          <%= render "shared/mark" %>
        <% end %>
      </div>
      <div class="">
        <%= link_to user_path(current_user) do %>
          <% if current_user.user_image? %>
            <%= image_tag current_user.user_image.url %>
          <% else %>
            <%= image_tag asset_path("default_user.png") %>
          <% end %>
        <% end %>
      </div>
    </div>
  <% end %>
</header>
