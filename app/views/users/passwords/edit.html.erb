<h1>パスワード変更</h1>
<div class="sub flame">
  <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>
    <%= f.hidden_field :reset_password_token %>

      <%= f.label :password, "新しいパスワード", class: "sr-only" %>
      <% if @minimum_password_length %>
        <em>(<%= @minimum_password_length %> characters minimum)</em>
      <% end %>
      <%= f.password_field :password, autofocus: true, autocomplete: "new-password", class: "form-control", placeholder: "新しいパスワード（６字以上)" %>


      <%= f.label :password_confirmation, "確認用のパスワード", class: "sr-only" %>
      <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control", placeholder: "確認用のパスワード" %>


      <%= f.submit "パスワードを変更する", class:"btn btn-primary btn-block" %>
  <% end %>

  <%= render "devise/shared/links" %>
</div>
