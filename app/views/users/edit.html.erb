<h1>プロフィール編集</h1>
<div class="sub flame">
  <%= form_with(model: @user, local: true) do |f| %>
    <%= render 'shared/error_messages', model: f.object %>

    <div class="form-group">
      <%= f.label :name %><span class="must"> (必須)</span>
      <%= f.text_field :name, class: "form-control", placeholder:"ユーザー名を入力してください。", autocomplete:"off" %>
    </div>

    <div class="form-group">
      <%= f.label :email %>
      <% if @user.uid.nil? %>
        <span class="must"> (必須)</span>
      <% end %>
      <%= f.email_field :email, class: "form-control", placeholder:"メールアドレスを入力してください。", autocomplete:"off" %>
    </div>

    <div class="form-group">
      <%= f.label :password %>
      <% if @user.uid.nil? %>
        <span class="must"> (必須)</span>
      <% end %>
      <%= f.text_field :password, class: "form-control", placeholder:"パスワードを入力してください。(6字以上)", type:"password" %>
    </div>

    <div class="form-group">
      <%= f.label :password_confirmation %>
      <% if @user.uid.nil? %>
        <span class="must"> (必須)</span>
      <% end %>
      <%= f.text_field :password_confirmation, class: "form-control", placeholder:"確認用のパスワードを入力してください。", type:"password" %>
    </div>

    <div class="form-group">
      <%= f.label :Twitterリンク %>
      <%= f.text_field :twitter_link, class: "form-control", placeholder:"TwitterアカウントのURLを入力してください。", autocomplete:"off" %>
    </div>

    <div class="form-group">
      <%= f.label :GitHubリンク %>
      <%= f.text_field :github_link, class: "form-control", placeholder:"GitHubアカウントのURLを入力してください。", autocomplete:"off" %>
    </div>

    <div class="form-group">
      <%= f.label :user_image %>
      <%= f.file_field :user_image, class: "form-control" %>
    </div>

    <div class="form-group">
      <%= f.label :自己紹介 %>
      <%= f.text_area :profile, class: "form-control", placeholder:"自己紹介文を入力してください。(500字以内)", autocomplete:"off" %>
    </div>
    <%= f.submit "保存", class:"btn btn-primary btn-block" %>
  <% end %>
  
<%= link_to "アカウントを削除する", user_path(@user), method: :delete, data:{confirm:"アカウントを削除した場合、全てのデータが失われます。本当に削除しますか？"} %>
