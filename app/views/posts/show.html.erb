<h1><%= @post.name %></h1>
<div>サービスの概要：<%= @post.content %></div>
<div>サービスへのリンク：<%=  %></div>
<div>主な実装機能：<%= @post.function %></div>
<div>使用言語：<%= @post.language %></div>
<div>開発期間：<%= @post.period %></div>
<div>アピールポイント：<%= @post.point %></div>
<div>
  <% @post.tags.each do |list| %>
    <%= link_to list.tag_name, tag_path(list) %>
  <% end %>
</div>
<%= render "shared/stock_form" %>

<div> </div>
<%= form_with(model:[@post, @comment], method: :post) do |f| %>
  <%= f.text_area :content %>
  <%= f.hidden_field :post_id, value: @post.id %>
  <%= f.submit "コメント送信", class: "btn-sm btn-primary" %>
<% end %>

<div>コメント</div>
<ul class="list-group">
  <% @comments.each do |comment| %>
    <li class="list-group-item">
      <%= link_to comment.user.name, user_path(comment.user) %>
      <%= comment.content %>
  <% end %>
</ul>