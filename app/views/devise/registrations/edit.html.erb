<h1>プロフィール編集</h1>
<div class="sub flame">
  <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>

    <div class="form-group">
      <%= f.label :email %>
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control", placeholder:"メールアドレスを入力してください。" %>
    </div>

    <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
      <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
    <% end %>

    <div class="form-group">
      <%= f.label :password %> <i>(変更したくない場合は空白にしてください)</i>
      <%= f.password_field :password, autocomplete: "new-password", class: "form-control", placeholder:"パスワードを入力してください。" %>
      <% if @minimum_password_length %>
        <em><%= @minimum_password_length %> 文字以上</em>
      <% end %>
    </div>

    <div class="form-group">
      <%= f.label :password_confirmation %><br />
      <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control", placeholder:"確認用のパスワードを入力してください。" %>
    </div>

    <div class="form-group">
      <%= f.label :current_password %> <i>(変更を確認するには現在のパスワードが必要です。)</i>
      <%= f.password_field :current_password, autocomplete: "current-password", class: "form-control", placeholder:"確認用のパスワードを入力してください。" %>
    </div>

      <%= f.submit "保存する", class:"btn btn-primary btn-block" %>
  <% end %>

  <p><%= button_to "アカウントを削除", registration_path(resource_name), data: { confirm: "本当に削除しますか？" }, method: :delete %></p>

  <%= link_to "戻る", :back %>
</div>
