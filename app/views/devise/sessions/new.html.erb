<h1>ログイン</h1>
<div class="sub flame">
  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>

      <%= f.label :email, class: "sr-only" %>
      <%= f.email_field :email, autofocus: true, class: "form-control",placeholder: "メールアドレス", autocomplete:"off" %>


      <%= f.label :password, class: "sr-only" %>
      <%= f.password_field :password, autocomplete: "current-password",placeholder: "パスワード", type:"password", class: "form-control" %>

    <% if devise_mapping.rememberable? %>
      <div class="field">
        <%= f.check_box :remember_me %>
        <%= f.label :remember_me %>
      </div>
    <% end %>

    <%= f.submit "ログイン", class:"btn btn-primary btn-block" %>
  <% end %>

  <%= render "devise/shared/links" %>
</div>
