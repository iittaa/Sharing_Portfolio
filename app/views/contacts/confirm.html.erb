<h1>確認画面</h1>
<div class="sub flame">
  <%= form_with(model: @contact, url: contacts_thanks_path, class:"form-horizontal") do |f| %>
    <%= render 'shared/error_messages', model: f.object %>

    <div class="form-group">
      <%= f.label :ユーザー名, class:"col-sm-2 control-label" %>
      <div class="col-sm-10">
        <p class="form-control-static"><%= @contact.name %></p>	
      </div>
    </div>
    
    <div class="form-group">
      <%= f.label :メールアドレス, class:"col-sm-2 control-label" %>
      <div class="col-sm-10">
      <p class="form-control-static"><%= @contact.email %></p>
      </div>
    </div>
    
    <div class="form-group">
      <%= f.label :内容, class:"col-sm-2 control-label" %>
      <div class="col-sm-10">
      <p class="form-control-static"><%= @contact.content %></p>	
      </div>
    </div>

    <%= f.submit "送信", class:"btn btn-primary btn-block" %>
  <% end %>
</div>
